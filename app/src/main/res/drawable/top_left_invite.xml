<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="100%" >
            <shape android:shape="rectangle">
                <size android:height="10dp" android:width="30dp"/>
                <stroke android:color="@android:color/darker_gray" android:width="0dp"/>
                <solid android:color="#32caa7" />
            </shape>
        </rotate>
    </item>
</layer-list>
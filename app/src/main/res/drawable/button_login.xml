<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item  >
                <shape>
                    <solid android:color="@color/color.gray" />
                    <corners android:radius="2dip"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item android:state_enabled="false">
        <layer-list>
            <item  >
                <shape>
                    <solid android:color="@color/color.gray.disable" />
                    <corners android:radius="2dip"/>
                </shape>
            </item>
        </layer-list>
    </item>



    <item>
        <layer-list>
            <item >
                <shape>
                    <solid android:color="@color/color.gray" />
                    <corners android:radius="2dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
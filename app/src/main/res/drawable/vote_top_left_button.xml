<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="135"
            android:pivotX="55%"
            android:pivotY="-5%" >
            <shape android:shape="rectangle">
                <stroke android:color="#80f1eff0" android:width="4dp"/>
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%" >
            <shape android:shape="rectangle">
                <stroke android:color="#80f1eff0" android:width="4dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
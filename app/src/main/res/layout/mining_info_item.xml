<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp">

        <!-- Profile Image -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <RelativeLayout
                android:layout_width="@dimen/transaction_profile_diameter"
                android:layout_height="@dimen/transaction_profile_diameter"
                android:layout_centerVertical="true"
                android:background="@drawable/go_black">

            </RelativeLayout>

        </RelativeLayout>

        <!-- Title + Text-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <!-- Title -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <bitwalking.bitwalking.util.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/transaction_title_size"
                        android:text="Bitwalking"
                        android:textColor="@android:color/black"/>

                </RelativeLayout>

                <!-- Mining Day -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <bitwalking.bitwalking.util.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/transaction_to_from_size"
                        android:text="Daily Mining"
                        android:textColor="@color/transactions_secondary_text_color"
                        android:id="@+id/transactiontype" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp">

                <!-- Amount -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/transaction_amount_size"
                        android:textColor="@color/mining_amount_text_color"
                        android:text="+ 12.0 W$"
                        android:id="@+id/transaction_amount"/>

                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
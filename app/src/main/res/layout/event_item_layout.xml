<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_list_item_height"
        android:background="@color/event_list_item_background"
        android:layout_marginBottom="25dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar"
                android:id="@+id/event_list_image"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="0.45">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--Category-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"
                    android:alpha="0.5"
                    android:text="education"
                    android:textAllCaps="true"
                    android:id="@+id/event_list_category"
                    android:layout_weight="0"/>

                <!--Title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@android:color/white"
                    android:text="Web Summit children\nof the future fund"
                    android:id="@+id/event_list_title"
                    android:layout_weight="1"/>

                <!--Start time-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:text="Starts in 5 days"
                    android:id="@+id/event_list_start_time"
                    android:layout_weight="0"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
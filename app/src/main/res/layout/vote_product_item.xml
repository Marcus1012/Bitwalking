<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vote_product_item_height">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/vote_product_divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vote_product_item_height"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">
            <bitwalking.bitwalking.util.DolceVitaTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" sony smartwatch 3"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.1"
                android:background="@android:color/transparent"
                android:textAllCaps="true"
                android:id="@+id/vote_product_item_text"
                android:layout_weight="1"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vote_product_item_height"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_margin="1dp"
                    android:id="@+id/vote_product_item_image"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vote_product_selected_v"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:padding="0dp"
                android:id="@+id/vote_product_item_select_image"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
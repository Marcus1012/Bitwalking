<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent">

    <!-- Email -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginBottom="10dp">

        <bitwalking.bitwalking.util.BWEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email address"
            android:layout_marginRight="@dimen/text_view_margin_right_left"
            android:layout_marginLeft="@dimen/text_view_margin_right_left"
            android:textSize="@dimen/text_input_size"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/color.gray"
            android:background="@drawable/edittext_background"
            android:paddingBottom="6dp"
            android:maxLines="1"
            android:cursorVisible="true"
            android:typeface="normal"
            android:inputType="textEmailAddress"
            android:maxLength="254"
            android:id="@+id/join_email"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/wishlist_v_white"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:visibility="gone"
            android:id="@+id/join_email_ok_v"/>

    </RelativeLayout>

    <!-- Password -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginBottom="10dp">

        <bitwalking.bitwalking.util.BWEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_input_size"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/color.gray"
            android:background="@drawable/edittext_background"
            android:hint="Choose password"
            android:layout_marginRight="@dimen/text_view_margin_right_left"
            android:layout_marginLeft="@dimen/text_view_margin_right_left"
            android:paddingBottom="6dp"
            android:singleLine="true"
            android:cursorVisible="true"
            android:typeface="normal"
            android:inputType="textPassword"
            android:id="@+id/join_password"/>

    </RelativeLayout>

    <!-- Password Again -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginBottom="10dp">

        <bitwalking.bitwalking.util.BWEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/color.gray"
            android:background="@drawable/edittext_background"
            android:hint="Enter password, again"
            android:textSize="@dimen/text_input_size"
            android:layout_marginRight="@dimen/text_view_margin_right_left"
            android:layout_marginLeft="@dimen/text_view_margin_right_left"
            android:paddingBottom="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:cursorVisible="true"
            android:typeface="normal"
            android:id="@+id/join_password_again"/>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/termsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="By clicking next you accept the \nBitwalking terms" />


</LinearLayout>